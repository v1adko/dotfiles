[alias]
    co = checkout
    br = branch
    cm = commit -m
    cma = commit -am
    st = status
    po = push origin
    pom = push origin master
    plo = pull origin
    plom = pull origin master
    com = checkout master
    uncommit = reset --soft ^HEAD
    untag = tag -d
    # Will throw, but at least show the :refs/ which I always forget
    untag-remote = push origin :refs/tags/
